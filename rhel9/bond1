nmcli connection add type bond mode active-backup primary ens192 \
ipv4.method manual ipv4.addresses 192.168.150.140/24 ipv4.gateway 192.168.150.1 \
ifname bond0 con-name bond0 autoconnect yes

nmcli connection delete ens192
nmcli connection delete ens224

nmcli connection add type ethernet slave-type bond master bond0 \
ifname ens192 con-name ens192

nmcli connection add type ethernet slave-type bond master bond0 \
ifname ens224 con-name ens224

nmcli connection reload

watch -d -n 0.5 cat /proc/net/bonding/bond0
