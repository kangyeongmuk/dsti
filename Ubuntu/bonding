network:
  version: 2
  renderer: networkd

  ethernets:
    ens160:
      dhcp4: no
    ens192:
      dhcp4: no

  bonds:
    bond0:
      interfaces:
        - ens160
        - ens192
      addresses:
        - 192.168.10.100/24
      gateway4: 192.168.10.1
      nameservers:
        addresses:
          - 8.8.8.8
          - 8.8.4.4
      parameters:
        mode: active-backup
        primary: ens160
        mii-monitor-interval: 100
